%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
{require_otp_vsn, "R16|17|18|19|20|21|22"}.
{erl_opts,
 [debug_info,
  {platform_define, "^(19|2[0-9])", 'ERLANG_OTP_VERSION_19'},
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars]}.

{deps, [
        {jsx, "2.8.0"},
        {lhttpc, "1.5.1"},
        {eini, "1.2.4"},
        {base16, "1.0.0"}
       ]}.

{overrides,
 [
  %% do not pull in the covertool plugin or repo, cause it fetches rebar and
  %% breaks rebar3!
  {override, eini, [{plugins, []},{deps, []}]}
 ]}.


{profiles, [
            {test, [{deps, [{meck, "0.8.4"}]}]}
           ,{warnings, [{erl_opts, [warnings_as_errors]}]}
           ]}.
